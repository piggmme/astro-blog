---
import HeadingTag from "@/components/HeadingTag.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
import type { MarkdownLayoutProps } from "astro";
import dayjs from "dayjs";

interface Props {
  frontmatter: {
    title: string;
    author?: string;
    description?: string;
    pubDate?: string | Date;
    image?: {
      url: string;
      alt?: string;
    };
  };
  headings: any[];
}

const { frontmatter, headings } = Astro.props;
---

<BaseLayout title={frontmatter.title}>
  <section class="header">
    <h1 class="title">{frontmatter.title}</h1>
    {
      frontmatter.pubDate && (
        <p>{dayjs(frontmatter.pubDate).format("YYYY.MM.DD")}</p>
      )
    }
    {
      frontmatter.image && (
        <img src={frontmatter.image.url} alt={frontmatter.image.alt} />
      )
    }
  </section>

  <div class="main">
    <section class="markdown">
      <slot />
    </section>
    <nav>
      {
        headings.length !== 0 && (
          <ul class="list">
            {headings.map((head) => (
              <li>
                <a href={`#${head.slug}`}>
                  <HeadingTag level={head.depth}>
                    {Array.from({ length: head.depth - 1 }, (_, idx) =>
                      idx === 0 ? "" : "ㅤ",
                    ).join("")}
                    {head.text}
                  </HeadingTag>
                </a>
              </li>
            ))}
          </ul>
        )
      }
    </nav>
  </div>
</BaseLayout>

<style lang="scss">
  .header {
    display: block;
    padding-top: 48px;
    padding-bottom: 60px;
    width: 100%;
    box-sizing: border-box;

    .title {
      font-size: rem(32px);
      font-weight: 700;
      margin: 0;
    }

    p {
      font-size: rem(14px);
      color: $grey-500;
      margin: 8px 0;
    }

    img {
      max-width: 500px;
      margin: 0 auto;
    }
  }

  .main {
    display: flex;
    justify-content: start;
    align-items: start;
    height: auto;
    width: 100%;
    box-sizing: border-box;

    .markdown {
      flex: 8;
      min-width: 0;
      box-sizing: border-box;
      padding-right: 30px;
    }

    nav {
      flex: 0 0 auto;
      max-width: 250px;
      min-width: 200px;
      position: sticky;
      top: 16px;
      right: 0px;
      box-sizing: border-box;

      .list li,
      .list a,
      .list h1,
      .list h2,
      .list h3,
      .list h4,
      .list h5,
      .list h6 {
        white-space: normal;
        text-overflow: clip;
        overflow: visible;
        word-break: break-word;
      }

      .list h1,
      .list h2 {
        font-size: rem(14px);
      }
      .list h3,
      .list h4 {
        font-size: rem(12px);
      }
      .list h5,
      .list h6 {
        font-size: rem(10px);
      }
      .list h1 {
        font-weight: 700;
        font-size: rem(16px);
      }
      .list h2 {
        font-weight: 600;
      }
      .list h3 {
        font-weight: 400;
      }
    }
  }

  @media screen and (max-width: 1000px) {
    .main {
      nav {
        display: none;
      }

      .markdown {
        max-width: 100%;
        padding-right: 0;
      }
    }
  }

  .markdown li,
  .markdown a,
  .markdown h1,
  .markdown h2,
  .markdown h3,
  .markdown h4,
  .markdown h5,
  .markdown h6 {
    box-sizing: border-box;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
  }
  .markdown h1,
  .markdown h2 {
    font-size: rem(14px);
  }
  .markdown h3,
  .markdown h4 {
    font-size: rem(12px);
  }
  .markdown h5,
  .markdown h6 {
    font-size: rem(10px);
  }
  .markdown h1 {
    font-weight: 700;
    font-size: rem(16px);
  }
  .markdown h2 {
    font-weight: 600;
  }
  .markdown h3 {
    font-weight: 400;
  }
  .markdown h4,
  .markdown h5,
  .markdown h6 {
    color: $grey-400;
  }
</style>

<style is:global>
  .markdown {
    img {
      max-width: 100%;
      height: auto;
    }

    /* Markdown 스타일 */
    font-family:
      "Pretendard Variable",
      Pretendard,
      -apple-system,
      BlinkMacSystemFont,
      system-ui,
      Roboto,
      "Helvetica Neue",
      "Segoe UI",
      "Apple SD Gothic Neo",
      "Noto Sans KR",
      "Malgun Gothic",
      "Apple Color Emoji",
      "Segoe UI Emoji",
      "Segoe UI Symbol",
      sans-serif;
    line-height: 1.6;
    color: #191f28;

    h1 {
      font-size: 2rem;
      color: #191f28;
      border-bottom: 2px solid #ddd;
      padding-bottom: 0.3rem;
    }

    blockquote {
      border-left: 4px solid #ddd;
      margin: 1rem 0;
      padding: 0.5rem 1rem;
    }

    table {
      border-collapse: collapse;
      width: 100%;
      margin: 1rem 0;
    }

    th {
      background-color: #f8f8f8;
    }

    th,
    td {
      border: 1px solid #ddd;
      padding: 0.5rem;
    }

    ul,
    ol {
      margin: 1rem 0;
      padding-left: 2rem;
    }

    p {
      margin: 1rem 0;
    }

    pre {
      padding: 1rem;
      border-radius: 6px;
      overflow-x: auto; /* 긴 코드 스크롤 가능 */
      font-family: "Courier New", monospace;
      max-width: 100%;
      box-sizing: border-box;
    }

    pre code {
      font-size: 1rem;
    }

    /* ✅ 2. 인라인 코드 스타일 (`<code>...</code>` 형태) */
    :not(pre) code {
      color: #d63384; /* 붉은색 강조 */
      font-weight: 700;
      padding: 0.2rem 0.4rem;
      border-radius: 4px;
      background-color: #eaecee;
    }
  }
</style>
