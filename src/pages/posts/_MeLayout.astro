---
import HeadingTag from '@/components/HeadingTag.astro'
import BaseLayout from '@/layouts/BaseLayout.astro'
import type { MarkdownLayoutProps } from 'astro'

type Props = MarkdownLayoutProps<{
  title?: string
}>

const { frontmatter, headings } = Astro.props
const title = frontmatter.title || 'About Me'
---

<BaseLayout title={title}>
  <div class='main'>
    <section class='markdown'>
      <slot />
    </section>
    <!-- {headings.length > 0 && (
      <nav>
        <ul class='list'>
          {headings.map(head => (
            <li>
              <a href={`#${head.slug}`}>
                <HeadingTag level={head.depth}>
                  {Array.from({ length: head.depth - 1 }, (_, idx) => idx === 0 ? '' : 'ㅤ').join('')}
                  {head.text}
                </HeadingTag>
              </a>
            </li>
          ))}
        </ul>
      </nav>
    )} -->
  </div>
</BaseLayout>

<style lang='scss'>
  .main {
    display: flex;
    justify-content: start;
    align-items: start;
    height: auto;
    width: 100%;
    box-sizing: border-box;
  }

  @media screen and (max-width: 768px) {
    .main {
      nav {
        display: none;
      }

      .markdown {
        max-width: 100%;
      }
    }
  }

  .list li, .list a, .list h1, .list h2, .list h3, .list h4, .list h5, .list h6 {
    box-sizing: border-box;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
  }
  .list h1, .list h2 {
    font-size: rem(14px);
  }
  .list h3, .list h4 {
    font-size: rem(12px);
  }
  .list h5, .list h6 {
    font-size: rem(10px);
  }
  .list h1 {
    font-weight: 700;
    font-size: rem(16px);
  }
  .list h2 {
    font-weight: 600;
  }
  .list h3 {
    font-weight: 400;
  }
  .list h4, .list h5, .list h6 {
    color: $grey-400;
  }
</style>

<style is:global>
  .markdown {
    img {
      max-width: 100%;
      height: auto;
    }

    /* Markdown 스타일 */
    font-family: "Pretendard Variable", Pretendard, -apple-system, BlinkMacSystemFont, 
                 system-ui, Roboto, "Helvetica Neue", "Segoe UI", "Apple SD Gothic Neo", 
                 "Noto Sans KR", "Malgun Gothic", "Apple Color Emoji", "Segoe UI Emoji", 
                 "Segoe UI Symbol", sans-serif;
    line-height: 1.6;
    color: #191f28;

    h1 {
      font-size: 2rem;
      color: #191f28;
      border-bottom: 2px solid #ddd;
      padding-bottom: 0.3rem;
    }

    blockquote {
      border-left: 4px solid #ddd;
      margin: 1rem 0;
      padding: 0.5rem 1rem;
    }

    table {
      border-collapse: collapse;
      width: 100%;
      margin: 1rem 0;
    }

    th {
      background-color: #f8f8f8;
    }

    th, td {
      border: 1px solid #ddd;
      padding: 0.5rem;
    }

    ul, ol {
      margin: 1rem 0;
      padding-left: 2rem;
    }

    p {
      margin: 1rem 0;
    }

    pre {
      padding: 1rem;
      border-radius: 6px;
      overflow-x: auto; /* 긴 코드 스크롤 가능 */
      font-family: 'Courier New', monospace;
      max-width: 100%;
      box-sizing: border-box;
    }

    pre code {
      font-size: 1rem;
    }

    /* ✅ 2. 인라인 코드 스타일 (`<code>...</code>` 형태) */
    :not(pre) code {
      color: #d63384; /* 붉은색 강조 */
      font-weight: 700;
      padding: 0.2rem 0.4rem;
      border-radius: 4px;
      background-color: #eaecee;
    }

    a {
      color: inherit;
    }
  }
</style>