---
import HeadingTag from '@/components/HeadingTag.astro'
import BaseLayout from '@/layouts/BaseLayout.astro'
import type { MarkdownLayoutProps } from 'astro'

type Props = MarkdownLayoutProps<{
  title?: string
}>

const { frontmatter, headings } = Astro.props
const title = frontmatter.title || 'About Me'
---

<BaseLayout title={title}>
  <div class='main'>
    <section class='markdown'>
      <slot />
    </section>
    {headings.length > 0 && (
      <nav>
        <ul class='list'>
          {headings.map(head => (
            <li>
              <a href={`#${head.slug}`}>
                <HeadingTag level={head.depth}>
                  {Array.from({ length: head.depth - 1 }, (_, idx) => idx === 0 ? '' : 'ㅤ').join('')}
                  {head.text}
                </HeadingTag>
              </a>
            </li>
          ))}
        </ul>
      </nav>
    )}
  </div>
</BaseLayout>

<style lang='scss'>
  .main {
    display: flex;
    justify-content: start;
    align-items: start;
    height: auto;
    padding: 48px 24px;
    width: 100%;
    box-sizing: border-box;

    .markdown {
      box-sizing: border-box;
      padding-right: 30px;
      max-width: calc(100% - 250px);
    }

    nav {
      position: sticky;
      top: 16px;
      right: 0px;
    }
  }

  @media screen and (max-width: 768px) {
    .main {
      nav {
        display: none;
      }

      .markdown {
        max-width: 100%;
      }
    }
  }

  .list li, .list a, .list h1, .list h2, .list h3, .list h4, .list h5, .list h6 {
    box-sizing: border-box;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
  }
  .list h1, .list h2 {
    font-size: rem(14px);
  }
  .list h3, .list h4 {
    font-size: rem(12px);
  }
  .list h5, .list h6 {
    font-size: rem(10px);
  }
  .list h1 {
    font-weight: 700;
    font-size: rem(16px);
  }
  .list h2 {
    font-weight: 600;
  }
  .list h3 {
    font-weight: 400;
  }
  .list h4, .list h5, .list h6 {
    color: $grey-400;
  }
</style>

<style is:global>
  .markdown {
    img {
      max-width: 100%;
      height: auto;
    }

    /* Markdown 스타일 */
    font-family: 'Arial', sans-serif;
    line-height: 1.6;
    color: #333;

    h1 {
      font-size: 2rem;
      color: #2a2a2a;
      border-bottom: 2px solid #ddd;
      padding-bottom: 0.3rem;
      margin-top: 2rem;
      margin-bottom: 1rem;
    }

    h2 {
      font-size: 1.5rem;
      color: #2a2a2a;
      margin-top: 1.5rem;
      margin-bottom: 0.8rem;
    }

    h3 {
      font-size: 1.25rem;
      color: #2a2a2a;
      margin-top: 1.2rem;
      margin-bottom: 0.6rem;
    }

    blockquote {
      border-left: 4px solid #ddd;
      margin: 1rem 0;
      padding: 0.5rem 1rem;
    }

    table {
      border-collapse: collapse;
      width: 100%;
      margin: 1rem 0;
    }

    th {
      background-color: #f8f8f8;
    }

    th, td {
      border: 1px solid #ddd;
      padding: 0.5rem;
    }

    ul, ol {
      margin: 1rem 0;
      padding-left: 2rem;
    }

    p {
      margin: 1rem 0;
    }

    pre {
      padding: 1rem;
      border-radius: 6px;
      overflow-x: auto;
      font-family: 'Courier New', monospace;
    }

    pre code {
      font-size: 1rem;
    }

    code {
      color: #d63384;
      padding: 0.2rem 0.4rem;
      border-radius: 4px;
      font-family: 'Courier New', monospace;
      font-size: 0.9rem;
    }
  }
</style>
